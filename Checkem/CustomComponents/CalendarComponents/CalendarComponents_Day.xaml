<UserControl x:Class="Checkem.CustomComponents.CalendarComponents.CalendarComponents_Day"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Checkem.CustomComponents"
             mc:Ignorable="d" 
             d:DesignHeight="220"
             d:DesignWidth="280"
             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Viewbox>
            <TextBlock x:Name="DateTextBlock" Text="{Binding Day}" TextAlignment="Center"/>
        </Viewbox>
    </Grid>
</UserControl>
