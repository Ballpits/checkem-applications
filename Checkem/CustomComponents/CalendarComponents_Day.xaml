<UserControl x:Class="Checkem.CustomComponents.CalendarComponents_Day"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Checkem.CustomComponents"
             mc:Ignorable="d" 
             d:DesignHeight="220"
             d:DesignWidth="280"
             >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Column="1">
            <TextBlock x:Name="DateTextBlock" Text="{Binding Day}" TextAlignment="Center" FontFamily="Arial"/>
        </Viewbox>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Vertical">
        </StackPanel>
    </Grid>
</UserControl>
