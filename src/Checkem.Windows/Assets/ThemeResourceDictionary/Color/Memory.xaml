<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >


    <Color x:Key="PrimaryColor">#FFFF0099</Color>
    <Color x:Key="SecondaryColor">#FF493240</Color>

    <Color x:Key="PrimaryHighlightColor">#32FF0099</Color>
    <Color x:Key="SecondaryHighlightColor">#7B493240</Color>


    <SolidColorBrush x:Key="Color.Primary" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="Color.Secondary" Color="{DynamicResource SecondaryColor}"/>

    <SolidColorBrush x:Key="Color.TextOnPrimaryColor" Color="{DynamicResource Color.White.Constant}"/>

    <SolidColorBrush x:Key="HighlightColor.Primary" Color="{DynamicResource PrimaryHighlightColor}"/>
    <SolidColorBrush x:Key="HighlightColor.Secondary" Color="{DynamicResource SecondaryHighlightColor}"/>
</ResourceDictionary>