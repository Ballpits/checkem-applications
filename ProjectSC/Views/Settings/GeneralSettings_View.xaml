                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Style="{StaticResource LanguageBoxStackPanel}">
                    <Image Source="../../Assets/Icon/Flags/cn.png" Style="{StaticResource LanguageBoxImages}"/>

                    <StackPanel Style="{StaticResource LanguageBoxStackPanelText}">
                        <TextBlock Text="简体中文" Style="{StaticResource LanguageBoxText-Big}"/>
