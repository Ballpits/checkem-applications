<UserControl x:Class="ProjectSC.Views.ThemePreview.ThemePreview_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:ProjectSC.Properties"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ProjectSC.Views.ThemePreview"
             mc:Ignorable="d" 
             d:DesignHeight="940" d:DesignWidth="1362">

    <UserControl.Resources>
        <ResourceDictionary Source="../../Assets/StyleResourceDictionary/ColorConverterDictionary.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="415*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Style="{StaticResource NavigationbarGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="11*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="NavbarCursor" Background="#4CFFFFFF"/>

            <Button Style="{StaticResource NavigationbarButton}" MinWidth="50">
                <Grid Style="{StaticResource NavigationbarButtonGrid}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>

                    <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.Row="1" Grid.Column="1">
                        <materialDesign:PackIcon Kind="ClipboardList" Style="{StaticResource NavigationbarIcon}"/>
                    </Viewbox>

                    <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.ColumnSpan="3" Grid.Row="3">
                        <TextBlock Style="{StaticResource NavigationbarTextBlock}">All Items</TextBlock>
                    </Viewbox>
                </Grid>
            </Button>

            <Button Style="{StaticResource NavigationbarButton}" Grid.Row="1">
                <Grid Style="{StaticResource NavigationbarButtonGrid}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>

                    <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.Row="1" Grid.Column="1">
                        <materialDesign:PackIcon Kind="Bell" Style="{StaticResource NavigationbarIcon}"/>
                    </Viewbox>

                    <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.ColumnSpan="3" Grid.Row="3">
                        <TextBlock Style="{StaticResource NavigationbarTextBlock}">Reminder</TextBlock>
                    </Viewbox>
                </Grid>
            </Button>

            <Button Style="{StaticResource NavigationbarButton}" Grid.Row="2">
                <Grid Style="{StaticResource NavigationbarButtonGrid}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>

                    <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.Row="1" Grid.Column="1" >
                        <materialDesign:PackIcon Kind="Star" Style="{StaticResource NavigationbarIcon}"/>
                    </Viewbox>

                    <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.ColumnSpan="3" Grid.Row="3">
                        <TextBlock Style="{StaticResource NavigationbarTextBlock}">Starred</TextBlock>
                    </Viewbox>
                </Grid>
            </Button>

            <Button FocusVisualStyle="{DynamicResource CheckemScrollBarFocusVisual}" VerticalAlignment="Bottom" Margin="0,0,0,10" materialDesign:ShadowAssist.ShadowDepth="Depth0" Background="{x:Null}" BorderBrush="{x:Null}" Height="Auto" Padding="0" Grid.Row="3">
                <materialDesign:PackIcon Kind="SettingsApplications" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30"/>
            </Button>
        </Grid>


        <Grid Grid.Column="1" Style="{StaticResource todoUSCTitlebar}" Margin="0" VerticalAlignment="Top" Height="50">
            <Border Background="White" CornerRadius="5" HorizontalAlignment="Center" Height="40" Width="400" Margin="0" Padding="0" VerticalAlignment="Center">
                <Grid>
                    <materialDesign:PackIcon Kind="Magnify" Opacity=".56" Height="30" Width="30" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" />

                    <TextBlock Margin="40,5,30,5" Text="Search" MinWidth="200" VerticalAlignment="Center" Height="30" FontFamily="Arial" FontSize="16" Padding="0,5,0,0" Foreground="#FF939393"/>
                </Grid>
            </Border>

            <materialDesign:PackIcon  Kind="Plus" HorizontalAlignment="Right" VerticalAlignment="Center" Width="35" Height="35" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="0,0,20,0" Foreground="White"/>
        </Grid>

        <StackPanel Grid.Column="1" Margin="0,50,0,0" Background="{Binding Source={x:Static properties:Settings.Default}, Path=GrayMainColor, Converter={StaticResource ColorToBrushConverter}}" Loaded="StackPanel_Loaded">
            <Border Background="{Binding Source={x:Static properties:Settings.Default}, Path=ItembarColor, Converter={StaticResource ColorToBrushConverter}}" CornerRadius="10" Height="70" Margin="10,10,10,0">
                <Grid>
                    <materialDesign:PackIcon Style="{StaticResource ItembarCheckboxCircleIcon}" HorizontalAlignment="Left" Margin="15,0,0,0"/>

                    <TextBlock VerticalAlignment="Top" Margin="70,14,55,0" FontSize="20" FontFamily="Arial" Height="24" Text="Preview some themes" Foreground="{Binding Source={x:Static properties:Settings.Default}, Path=DarkMainColor, Converter={StaticResource ColorToBrushConverter}}"/>

                    <materialDesign:PackIcon Kind="Bell" Margin="70,0,0,7.5" Width="20" Height="20" Foreground="#FFE3F321" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                    <TextBlock VerticalAlignment="Bottom" Margin="95,0,55,5.4" FontSize="14" FontFamily="Arial" Height="20" Text="Due date..." Foreground="{Binding Source={x:Static properties:Settings.Default}, Path=DarkMainColor, Converter={StaticResource ColorToBrushConverter}}"/>

                    <materialDesign:PackIcon Style="{StaticResource StarBorderIcon}" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                </Grid>
            </Border>
            <Border Background="{Binding Source={x:Static properties:Settings.Default}, Path=ItembarColor, Converter={StaticResource ColorToBrushConverter}}" CornerRadius="10" Height="50" Margin="10,10,10,0">
                <Grid>
                    <materialDesign:PackIcon Style="{StaticResource ItembarCheckboxCircleIcon}" HorizontalAlignment="Left" Margin="15,0,0,0"/>

                    <TextBlock VerticalAlignment="Center" Margin="70,0,55,0" FontSize="20" FontFamily="Arial" Height="24" Text="This one has no reminder" Foreground="{Binding Source={x:Static properties:Settings.Default}, Path=DarkMainColor, Converter={StaticResource ColorToBrushConverter}}"/>

                    <materialDesign:PackIcon Style="{StaticResource StarBorderIcon}" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                </Grid>
            </Border>
            <Border Background="{Binding Source={x:Static properties:Settings.Default}, Path=ItembarColor, Converter={StaticResource ColorToBrushConverter}}" CornerRadius="10" Height="70" Margin="10,10,10,0">
                <Grid>
                    <materialDesign:PackIcon Style="{StaticResource ItembarCheckboxCircleIcon}" HorizontalAlignment="Left" Margin="15,0,0,0"/>

                    <TextBlock VerticalAlignment="Top" Margin="70,14,55,0" FontSize="20" FontFamily="Arial" Height="24" Text="Too late" Foreground="{Binding Source={x:Static properties:Settings.Default}, Path=DarkMainColor, Converter={StaticResource ColorToBrushConverter}}"/>

                    <materialDesign:PackIcon Kind="Bell" Margin="70,0,0,7.5" Width="20" Height="20" Foreground="#FFE3F321" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                    <TextBlock Foreground="{Binding ItemPassedTextColor, Converter={StaticResource ColorToBrushConverter}, Source={x:Static properties:Settings.Default}}" VerticalAlignment="Bottom" Margin="95,0,55,5.4" FontSize="14" FontFamily="Arial" Height="20"><Run Text="Oops... it's passed already..."/><LineBreak/><Run Text=""/></TextBlock>

                    <materialDesign:PackIcon Style="{StaticResource StarIcon}" HorizontalAlignment="Right" Margin="0,0,10,0" Width="30" Height="30"/>
                </Grid>
            </Border>
            <Border Background="{Binding Source={x:Static properties:Settings.Default}, Path=ItembarColor, Converter={StaticResource ColorToBrushConverter}}" CornerRadius="10" Height="70" Margin="10,10,10,0">
                <Grid>
                    <materialDesign:PackIcon Style="{StaticResource ItembarCheckboxCircleIcon}" HorizontalAlignment="Left" Margin="15,0,0,0"/>

                    <TextBlock VerticalAlignment="Top" Margin="70,14,55,0" FontSize="20" FontFamily="Arial" Height="24" Text="No rush... We can wait" Foreground="{Binding Source={x:Static properties:Settings.Default}, Path=DarkMainColor, Converter={StaticResource ColorToBrushConverter}}"/>

                    <materialDesign:PackIcon Kind="Bell" Margin="70,0,0,7.5" Width="20" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="#FFF4FF00"/>
                    <TextBlock Foreground="{Binding DarkMainColor, Converter={StaticResource ColorToBrushConverter}, Source={x:Static properties:Settings.Default}}" VerticalAlignment="Bottom" Margin="95,0,55,5.4" FontSize="14" FontFamily="Arial" Height="20" Text="Tomorrow"/>

                    <materialDesign:PackIcon Style="{StaticResource StarBorderIcon}" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                </Grid>
            </Border>
            <Border Background="{Binding Source={x:Static properties:Settings.Default}, Path=ItembarColor, Converter={StaticResource ColorToBrushConverter}}" CornerRadius="10" Height="50" Margin="10,10,10,0">
                <Grid>
                    <materialDesign:PackIcon Style="{StaticResource ItembarCheckboxCircleIcon}" HorizontalAlignment="Left" Margin="15,0,0,0"/>

                    <TextBlock TextDecorations="Strikethrough" Foreground="{Binding ItemCompletedTextColor, Converter={StaticResource ColorToBrushConverter}, Source={x:Static properties:Settings.Default}}" VerticalAlignment="Top" Margin="70,14,55,0" FontSize="20" FontFamily="Arial" Height="24" Text="Always do your homework !"/>

                    <materialDesign:PackIcon Style="{StaticResource StarIcon}" HorizontalAlignment="Right" Margin="0,0,10,0" Width="30" Height="30"/>
                </Grid>
            </Border>
            <Border BorderBrush="{Binding Source={x:Static properties:Settings.Default}, Path=PrimaryColor, Converter={StaticResource ColorToBrushConverter}}" Background="{Binding Source={x:Static properties:Settings.Default}, Path=ItembarColor, Converter={StaticResource ColorToBrushConverter}}" CornerRadius="10" Height="50" Margin="10,10,10,0" BorderThickness="2">
                <Grid>
                    <materialDesign:PackIcon Style="{StaticResource ItembarCheckboxCircleIcon}" HorizontalAlignment="Left" Margin="15,0,0,0"/>

                    <TextBlock Foreground="{Binding DarkMainColor, Converter={StaticResource ColorToBrushConverter}, Source={x:Static properties:Settings.Default}}" VerticalAlignment="Center" Margin="70,0,55,0" FontSize="20" FontFamily="Arial" Height="24" Text="Highlight"/>

                    <materialDesign:PackIcon Style="{StaticResource StarBorderIcon}" HorizontalAlignment="Right" Margin="0,0,10,0" Width="30" Height="30"/>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
