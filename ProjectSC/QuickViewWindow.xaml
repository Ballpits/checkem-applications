<Window x:Class="ProjectSC.QuickViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ProjectSC"
        mc:Ignorable="d"
        Title="Quick View Window" WindowStartupLocation="CenterScreen" Topmost="True" ResizeMode="NoResize" FontFamily="Arial" WindowState="Maximized" ShowInTaskbar="False" WindowStyle="None" Background="#CC000000" AllowsTransparency="True" Width="1920" Height="1080" KeyDown="Window_KeyDown">

    <Grid x:Name="DataGrid">
        <Button x:Name="CloseButton" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Click="Button_Click" Width="35" Height="35" materialDesign:ButtonAssist.CornerRadius="100" Background="{x:Null}" Padding="0" BorderThickness="2" BorderBrush="{x:Null}" MouseEnter="CloseButton_MouseEnter" MouseLeave="CloseButton_MouseLeave">
            <materialDesign:PackIcon Kind="Close" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30"/>
        </Button>
        
        
    </Grid>
</Window>
