<UserControl x:Class="ProjectSC.UserControls.Custom.DetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ProjectSC.UserControls.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="510" d:DesignWidth="885">

    <Grid Background="#CC000000" MouseDown="DarkGrid_MouseDown" Loaded="DarkGrid_Loaded">
        <materialDesign:TransitioningContent x:Name="TrainsitionigContent2" OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromRight, Duration=0:0:0.3}">

            <Grid x:Name="DetailsGrid" Background="White" HorizontalAlignment="Right" Width="400">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,49.6">
                    <StackPanel>
                        <Grid x:Name="ChipGrid" Height="55">
                            <materialDesign:Chip x:Name="TagChip" IsDeletable="True" Visibility="Hidden" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5,20,0" DeleteClick="Chip_DeleteClick" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <Grid>
                                    <TextBox x:Name="ChipTitleEditTextbox" BorderBrush="{x:Null}" Background="{x:Null}" Focusable="True" LostFocus="ChipTitleEditTextbox_LostFocus"/>
                                </Grid>
                            </materialDesign:Chip>
                            
                            <Button HorizontalAlignment="Left" VerticalAlignment="Center" Width="45" Height="45" materialDesign:ButtonAssist.CornerRadius="10" materialDesign:ShadowAssist.ShadowDepth="Depth0" Background="White" BorderBrush="{x:Null}" Foreground="Black" Click="RetunButton_Click" Padding="0" Margin="10,10,0,0" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                                <materialDesign:PackIcon Kind="ArrowBack" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF2196F3"/>
                            </Button>

                            <TextBlock Name="Id_TB" Margin="60,0,0,0" FontSize="20"/>
                        </Grid>

                        <TextBox x:Name="textBoxTitle" Margin="10,10,10,0" TextWrapping="Wrap" MaxLength="100" FontSize="20" materialDesign:HintAssist.Hint="Title" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" FontFamily="Arial"/>

                        <Grid x:Name="ReminderTitleGrid" Margin="10,30,10,0" Height="40">
                            <materialDesign:PackIcon Kind="Bell" Foreground="#FFE3F321" Height="Auto" Width="Auto" Margin="5,0,0,5"/>
                            <TextBlock Text="Reminder" FontSize="16" FontFamily="Arial" Margin="45,10,0,0" HorizontalAlignment="Left"/>

                            <StackPanel Orientation="Horizontal" Margin="0" Width="180" HorizontalAlignment="Right">


                                <Button x:Name="ReminderBasicButton" Width="60" materialDesign:ShadowAssist.ShadowDepth="Depth0" materialDesign:ButtonAssist.CornerRadius="5 0 0 5" Height="Auto" Padding="0" Click="ReminderBasicButton_Click" HorizontalAlignment="Center">
                                    <TextBlock Text="Basic" FontFamily="Arial" Margin="0,0,0,1"/>
                                </Button>

                                <Button x:Name="ReminderNoneButton" Width="60" materialDesign:ShadowAssist.ShadowDepth="Depth0" materialDesign:ButtonAssist.CornerRadius="0" Height="Auto" Padding="0" BorderThickness="0,1" Click="ReminderNoneButton_Click">
                                    <TextBlock Text="None" FontFamily="Arial" Margin="0,0,0,1"/>
                                </Button>

                                <Button x:Name="ReminderAdvanceButton" Width="60" materialDesign:ShadowAssist.ShadowDepth="Depth0" materialDesign:ButtonAssist.CornerRadius="0 5 5 0" Height="Auto" Padding="0" Click="ReminderAdvanceButton_Click" HorizontalAlignment="Center">
                                    <TextBlock Text="Advance" FontFamily="Arial" Margin="0,0,0,1"/>
                                </Button>


                            </StackPanel>
                        </Grid>

                        <StackPanel x:Name="StpReminder">
                            <Border x:Name="BasicReminderField" Background="#FFF0F0F0" Margin="10,15,10,0" UseLayoutRounding="True" CornerRadius="5">
                                <Grid UseLayoutRounding="True">
                                    <DatePicker x:Name="EndDatePicker_Basic" HorizontalAlignment="Left" materialDesign:HintAssist.Hint="Due Date" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Margin="10,0,0,2" Width="120" FontSize="20" FontFamily="Arial" UseLayoutRounding="False"/>
                                    <materialDesign:TimePicker x:Name="EndTimePicker_Basic" Width="120" FontSize="20" FontFamily="Arial" HorizontalAlignment="Right" Margin="0,15,10,5" materialDesign:HintAssist.Hint="Due Time"/>
                                </Grid>
                            </Border>

                            <StackPanel x:Name="AdvanceRemidnerField" UseLayoutRounding="True">
                                <Border Background="#FFF0F0F0" Margin="10,5,10,0" UseLayoutRounding="True" CornerRadius="5 5 0 0">
                                    <Grid>
                                        <DatePicker x:Name="BeginDatePicker_Advance" HorizontalAlignment="Left" materialDesign:HintAssist.Hint="Begin Date" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Margin="10,0,0,2" Width="120" FontSize="20" FontFamily="Arial" UseLayoutRounding="True"/>
                                        <materialDesign:TimePicker x:Name="BeginTimePicker_Advance" Width="120" FontSize="20" FontFamily="Arial" HorizontalAlignment="Right" Margin="0,15,10,5" materialDesign:HintAssist.Hint="Begin Time"/>
                                    </Grid>
                                </Border>
                                <Border Background="#FFF0F0F0" Margin="10,0" UseLayoutRounding="True" CornerRadius="0 0 5 5">
                                    <Grid>
                                        <DatePicker x:Name="EndDatePicker_Advance" HorizontalAlignment="Left" materialDesign:HintAssist.Hint="End Date" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Margin="10,0,0,2" Width="120" FontSize="20" FontFamily="Arial" UseLayoutRounding="False"/>
                                        <materialDesign:TimePicker x:Name="EndTimePicker_Advance" Width="120" FontSize="20" FontFamily="Arial" HorizontalAlignment="Right" Margin="0,15,10,5" materialDesign:HintAssist.Hint="End Time"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <TextBox x:Name="textBoxDescription" Margin="10,30,10,0" TextWrapping="Wrap" MaxLength="500" FontSize="20" materialDesign:HintAssist.Hint="Description" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" FontFamily="Arial" AcceptsReturn="True" AcceptsTab="True"/>
                    </StackPanel>
                </ScrollViewer>

                <ScrollViewer VerticalAlignment="Bottom" Height="50" VerticalScrollBarVisibility="Disabled" Background="White">
                    <Grid>

                        <Button HorizontalAlignment="Left" VerticalAlignment="Center" Width="45" Height="45" materialDesign:ButtonAssist.CornerRadius="10" materialDesign:ShadowAssist.ShadowDepth="Depth0" Background="White" BorderBrush="{x:Null}" Foreground="#FF2196F3" Click="SaveButton_Click" Margin="10,0,0,0" Padding="0" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                            <materialDesign:PackIcon Kind="ContentSave" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF9708CC"/>
                        </Button>

                        <Button x:Name="RemoveButton" HorizontalAlignment="Right" VerticalAlignment="Center" Width="45" Height="45" materialDesign:ButtonAssist.CornerRadius="10" materialDesign:ShadowAssist.ShadowDepth="Depth0" Background="White" BorderBrush="{x:Null}" Foreground="#FFD63838" Margin="0,0,10,0" Click="RemoveButton_Click" IsTabStop="False" Padding="0" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                            <materialDesign:PackIcon Kind="TrashCan" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        </Button>
                    </Grid>
                </ScrollViewer>

            </Grid>
        </materialDesign:TransitioningContent>
    </Grid>
</UserControl>
