<UserControl x:Class="ProjectSC.UserControls.NotebookUSC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:MyNamespace="clr-namespace:ProjectSC"
             xmlns:local="clr-namespace:ProjectSC.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0" Orientation="Horizontal" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <Button Height="Auto" Width="70"/>
            <Button Height="Auto" Width="70"/>
            <Button Height="Auto" Width="70"/>
            <Button Height="Auto" Width="70"/>
            <Button Height="Auto" Width="70"/>
        </StackPanel>
        <Grid Margin="0" Grid.Row="1"/>
    </Grid>
</UserControl>
