<Window x:Name="AppWindow" x:Class="ProjectSC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:properties="clr-namespace:ProjectSC.Properties"
        xmlns:local="clr-namespace:ProjectSC"
        mc:Ignorable="d"
        Title="Check'em" Height="540" Width="960" WindowStartupLocation="CenterScreen" MinWidth="960" MinHeight="540" Icon="Icon/Icon-1024.ico" Background="White" WindowState="Maximized" Closed="AppWindow_Closed">

    <materialDesign:TransitioningContent x:Name="TrainsitionigContent" OpeningEffect="{materialDesign:TransitionEffect Kind=FadeIn, Duration=0:0:0.5}">
        <Grid x:Name="MainGrid" Loaded="Grid_Loaded" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="NavigationBar" Style="{StaticResource NavigationbarGrid}" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="11*"/>
                </Grid.RowDefinitions>

                <!--<Grid.Background>
                    <LinearGradientBrush EndPoint="4,1" StartPoint="1,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                <RotateTransform CenterY="0.5" CenterX="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#FF2196F3"/>
                        <GradientStop Color="#FF9708CC" Offset="0.5"/>
                    </LinearGradientBrush>
                </Grid.Background>-->

                <Grid x:Name="NavbarCursor" Background="#665CB7FF"/>

                <Button x:Name="ButtonAllItems" Style="{StaticResource NavigationbarButton}" Click="ButtonToDoList_Click" TabIndex="0">
                    <Grid Style="{StaticResource NavigationbarButtonGrid}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>

                        <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.Row="1" Grid.Column="1">
                            <materialDesign:PackIcon Kind="ClipboardList" Style="{StaticResource NavigationbarIcon}"/>
                        </Viewbox>

                        <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.ColumnSpan="3" Grid.Row="3">
                            <TextBlock Style="{StaticResource NavigationbarTextBlock}">All Items</TextBlock>
                        </Viewbox>
                    </Grid>
                </Button>

                <Button x:Name="ButtonReminder" Style="{StaticResource NavigationbarButton}" Click="ButtonDueDateFilter_Click" Grid.Row="1" TabIndex="1">
                    <Grid Style="{StaticResource NavigationbarButtonGrid}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>

                        <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.Row="1" Grid.Column="1">
                            <materialDesign:PackIcon Kind="Bell" Style="{StaticResource NavigationbarIcon}"/>
                        </Viewbox>

                        <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.ColumnSpan="3" Grid.Row="3">
                            <TextBlock Style="{StaticResource NavigationbarTextBlock}">Reminder</TextBlock>
                        </Viewbox>
                    </Grid>
                </Button>

                <Button x:Name="ButtonStarredFilter" Style="{StaticResource NavigationbarButton}" Click="ButtonStarredFilter_Click" Grid.Row="2" TabIndex="2">
                    <Grid Style="{StaticResource NavigationbarButtonGrid}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>

                        <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.Row="1" Grid.Column="1" >
                            <materialDesign:PackIcon Kind="Star" Style="{StaticResource NavigationbarIcon}"/>
                        </Viewbox>

                        <Viewbox Style="{StaticResource NavigationbarViewBox}" Grid.ColumnSpan="3" Grid.Row="3">
                            <TextBlock Style="{StaticResource NavigationbarTextBlock}">Starred</TextBlock>
                        </Viewbox>
                    </Grid>
                </Button>

                <Button FocusVisualStyle="{DynamicResource MyFocusVisual}" IsEnabled="True" x:Name="ButtonUserPref" VerticalAlignment="Bottom" Margin="0,0,0,10" materialDesign:ShadowAssist.ShadowDepth="Depth0" Background="{x:Null}" BorderBrush="{x:Null}" Height="Auto" Click="ButtonUserPref_Click" Padding="0" Grid.Row="3" TabIndex="3">
                    <materialDesign:PackIcon Kind="SettingsApplications" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30"/>
                </Button>

                <Button IsEnabled="True" x:Name="ButtonColorTester1" VerticalAlignment="Bottom" Margin="0,0,0,45.4" materialDesign:ShadowAssist.ShadowDepth="Depth0" Background="{x:Null}" BorderBrush="{x:Null}" Height="Auto" Click="ButtonColorTester1_Click" Padding="0" Grid.Row="3" TabIndex="3" IsTabStop="False">
                    <materialDesign:PackIcon Kind="ColorLens" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30" Foreground="#FF2196F3"/>
                </Button>

                <Button IsEnabled="True" x:Name="ButtonColorTester2" VerticalAlignment="Bottom" Margin="0,0,0,80.4" materialDesign:ShadowAssist.ShadowDepth="Depth0" Background="{x:Null}" BorderBrush="{x:Null}" Height="Auto" Click="ButtonColorTester2_Click" Padding="0" Grid.Row="3" TabIndex="3" IsTabStop="False">
                    <materialDesign:PackIcon Kind="ColorLens" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30" Foreground="Black"/>
                </Button>
            </Grid>

            <Grid x:Name="GridPrincipal" Margin="0" Grid.Column="1"/>

            <!--<TextBlock Text="This is a demo version of Check'em v0.x.x,Made by Umar Turdiev.All copy rights reserved under" Margin="70,0,0,0.4" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontFamily="Arial" TextAlignment="Center"/>
            <TextBlock Text="Attribution-NonCommercial-NoDerivs CC BY-NC-ND" Margin="585,0,0,0.4" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontFamily="Arial" TextAlignment="Center" Foreground="Red"/>-->
        </Grid>
    </materialDesign:TransitioningContent>
</Window>
