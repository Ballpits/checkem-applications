<Window x:Name="AppWindow" x:Class="ProjectSC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ProjectSC"
        mc:Ignorable="d"
        Title="Check'em" Height="540" Width="960" WindowStartupLocation="CenterScreen" MinWidth="960" MinHeight="540" Icon="Icon/Icon-1024.ico" Background="White" WindowState="Maximized" Closed="AppWindow_Closed">

    <materialDesign:TransitioningContent x:Name="TrainsitionigContent" OpeningEffect="{materialDesign:TransitionEffect Kind=FadeIn, Duration=0:0:0.5}">
        <Grid x:Name="MainGrid" Loaded="Grid_Loaded" Margin="0">

            <Grid x:Name="NavigationBar" HorizontalAlignment="Left" Width="70" Margin="0,0,0,0.4" Grid.RowSpan="2">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="4,1" StartPoint="1,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                <RotateTransform CenterY="0.5" CenterX="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#FF2196F3"/>
                        <GradientStop Color="#FF9708CC" Offset="0.5"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid x:Name="NavbarCursor" Background="#665CB7FF" Height="70" VerticalAlignment="Top"/>

                <Button x:Name="ButtonAllItems" Background="#002196F3" Grid.Row="3" BorderBrush="{x:Null}" Foreground="White" Height="70" materialDesign:ButtonAssist.CornerRadius="0" materialDesign:ShadowAssist.ShadowDepth="Depth0" Margin="0" MouseEnter="MouseEnterHighLight" MouseLeave="MouseLeaveUnHighLight" IsTabStop="False" Click="ButtonToDoList_Click" VerticalAlignment="Top" Padding="0">
                    <Grid Height="70">
                        <materialDesign:PackIcon Kind="ClipboardList" Height="40" Width="40" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBlock TextAlignment="Center" FontFamily="Arial" VerticalAlignment="Bottom" Margin="0,0,0,5" HorizontalAlignment="Center">All Items</TextBlock>
                    </Grid>
                </Button>

                <Button x:Name="ButtonReminder" Background="#002196F3" BorderBrush="{x:Null}" Foreground="White" Height="70" materialDesign:ButtonAssist.CornerRadius="0" materialDesign:ShadowAssist.ShadowDepth="Depth0" Margin="0,70,0,0" Grid.Row="2" MouseEnter="MouseEnterHighLight" MouseLeave="MouseLeaveUnHighLight" IsTabStop="False" Click="ButtonDueDateFilter_Click" VerticalAlignment="Top" Padding="0">
                    <Grid Height="70">
                        <materialDesign:PackIcon Kind="Bell" Height="40" Width="40" HorizontalAlignment="Center" Padding="0,10,0,0" Margin="0,10,0,0"/>
                        <TextBlock TextAlignment="Center" FontFamily="Arial" VerticalAlignment="Bottom" Margin="0,0,0,5" Text="Reminder" HorizontalAlignment="Center"/>
                    </Grid>
                </Button>

                <Button x:Name="ButtonStarredFilter" Background="#002196F3" BorderBrush="{x:Null}" Foreground="White" Height="70" BorderThickness="0,0,1,0" materialDesign:ButtonAssist.CornerRadius="0" materialDesign:ShadowAssist.ShadowDepth="Depth0" Margin="0,140,0,0" MouseEnter="MouseEnterHighLight" MouseLeave="MouseLeaveUnHighLight" IsTabStop="False" Click="ButtonStarredFilter_Click" VerticalAlignment="Top" Padding="0">
                    <Grid Height="70">
                        <materialDesign:PackIcon Kind="Star" Height="40" Width="40" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                        <TextBlock TextAlignment="Center" FontFamily="Arial" VerticalAlignment="Bottom" Margin="0,0,0,5" HorizontalAlignment="Center">Starred</TextBlock>
                    </Grid>
                </Button>

                <Button x:Name="ButtonUserPref" VerticalAlignment="Bottom" Margin="0" materialDesign:ShadowAssist.ShadowDepth="Depth0" Background="{x:Null}" BorderBrush="{x:Null}" Height="50" ToolTip="Preferces..." Click="ButtonUserPref_Click" IsTabStop="False" Padding="0">
                    <materialDesign:PackIcon Kind="SettingsApplications" HorizontalAlignment="Center" VerticalAlignment="Center" Width="35" Height="35"/>
                </Button>
            </Grid>

            <Grid x:Name="GridPrincipal" Margin="69,0,0,0" Grid.RowSpan="2"/>
        </Grid>
    </materialDesign:TransitioningContent>
</Window>
