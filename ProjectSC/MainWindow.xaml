<Window x:Name="AppWindow" x:Class="ProjectSC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ProjectSC"
        mc:Ignorable="d"
        Title="Check'em" Height="500" Width="750" WindowStartupLocation="CenterScreen" WindowState="Maximized" MinWidth="750" MinHeight="500" Icon="Icon/Icon-1024.ico" Loaded="AppWindow_Loaded" Background="White">
    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="SideBar" Margin="0" Background="#FF2196F3">
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="155*"/>
            </Grid.RowDefinitions>

            <Grid Margin="0,0,0,0.4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="45*"/>
                </Grid.RowDefinitions>

                <Viewbox Margin="0" VerticalAlignment="Center">
                    <TextBlock x:Name="TimeTB" TextWrapping="Wrap" Text="2 26" Foreground="White" Margin="5,0" FontFamily="Arial" TextDecorations="{x:Null}" TextAlignment="Center" />
                </Viewbox>

                <Viewbox Margin="20,10,20,0" Grid.Row="1">
                    <TextBlock x:Name="DateTB" TextWrapping="Wrap" Text="3,march" FontFamily="Arial" Margin="0" TextAlignment="Center" Foreground="White" />
                </Viewbox>
            </Grid>

            <Separator Grid.Row="1" Margin="15,0" Background="White" IsTabStop="False" Height="15"/>

            <Button x:Name="ButtonMyD" Background="#FF2196F3" Grid.Row="2" BorderBrush="{x:Null}" Foreground="White" Height="Auto" BorderThickness="0,0,1,0" materialDesign:ButtonAssist.CornerRadius="0" materialDesign:ShadowAssist.ShadowDepth="Depth0" Margin="0" MouseEnter="MouseEnterHighLight" MouseLeave="MouseLeaveUnHighLight" IsTabStop="False">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Viewbox>
                            <TextBlock TextAlignment="Center" FontFamily="Arial">My Day</TextBlock>
                        </Viewbox>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button x:Name="ButtonImp" Background="#FF2196F3" Grid.Row="3" BorderBrush="{x:Null}" Foreground="White" Height="Auto" BorderThickness="0,0,1,0" materialDesign:ButtonAssist.CornerRadius="0" materialDesign:ShadowAssist.ShadowDepth="Depth0" Margin="0" MouseEnter="MouseEnterHighLight" MouseLeave="MouseLeaveUnHighLight" IsTabStop="False">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Viewbox>
                            <TextBlock TextAlignment="Center" FontFamily="Arial">Important</TextBlock>
                        </Viewbox>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button x:Name="ButtonTD" Background="#FF2196F3" BorderBrush="{x:Null}" Foreground="White" Height="Auto" BorderThickness="0,0,1,0" materialDesign:ButtonAssist.CornerRadius="0" materialDesign:ShadowAssist.ShadowDepth="Depth0" Margin="0" Grid.Row="4" MouseEnter="MouseEnterHighLight" MouseLeave="MouseLeaveUnHighLight" IsTabStop="False">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Viewbox>
                            <TextBlock TextAlignment="Center" FontFamily="Arial">To Do</TextBlock>
                        </Viewbox>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            
            <Separator Grid.Row="5" Margin="15,0" Background="White" IsTabStop="False" Height="15"/>
            
        </Grid>

        <Grid x:Name="GridMain" Grid.Column="1" Margin="0"/>
    </Grid>
</Window>
